{
  "manifest_version": 3,
  "name": "Eazy LeetCode",
  "version": "1.0",
  "description": "Hides difficulty and acceptance tags on LeetCode.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["scripting", "activeTab"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problemset/*",
        "https://leetcode.com/problems/*/description/*",
        "https://leetcode.com/problems/*"
      ],
      "js": ["content.js"]
    }
  ]
}
